<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg_screen">
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:focusable="true">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_recoverPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/image_back"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/ic_back"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/recover_password"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/toolbar_title_size"
                    android:padding="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.Toolbar>
        <View
            android:layout_width="80dp"
            android:layout_height="1dp"
            android:background="@drawable/bg_view_back"
            app:layout_constraintTop_toBottomOf="@id/toolbar_recoverPassword"
            app:layout_constraintStart_toStartOf="parent"/>
        <ImageView
            android:id="@+id/image_password_logo"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginTop="40dp"
            android:scaleType="centerCrop"
            android:background="@drawable/ic_recover_password"
            app:layout_constraintTop_toBottomOf="@id/toolbar_recoverPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/text_recover_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose the best option below to reset your \npassword."
            android:textColor="@color/white_text_opacity"
            android:textSize="@dimen/paragraph_size"
            android:gravity="center"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/image_password_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <RadioGroup
            android:id="@+id/radio_otp_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_recover_message">
            <RadioButton
                android:id="@+id/radio_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/via_email"
                android:textColor="@color/white_text_opacity"
                android:textSize="14sp"
                android:checked="true"
                android:button="@null"
                android:drawablePadding="6dp"
                android:drawableLeft="@drawable/bg_radio_buttons"/>
            <RadioButton
                android:id="@+id/radio_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/via_phone"
                android:textColor="@color/white_text_opacity"
                android:textSize="14sp"
                android:button="@null"
                android:drawablePadding="6dp"
                android:layout_marginStart="40dp"
                android:drawableLeft="@drawable/bg_radio_buttons"/>
        </RadioGroup>

       <LinearLayout
           android:id="@+id/linear_edittext"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toBottomOf="@id/radio_otp_type">
           <EditText
               android:id="@+id/edittext_type_email"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="@string/hint_loginEmail"
               android:textColor="@color/white"
               android:layout_marginTop="30dp"
               android:layout_marginStart="40dp"
               android:layout_marginEnd="40dp"
               android:textColorHint="@color/hint_color"
               android:padding="16dp"
               android:gravity="center"
               android:inputType="textEmailAddress"
               android:background="@drawable/bg_edittext"/>
           <EditText
               android:id="@+id/edittext_type_phone"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="@string/hint_otp_phoneNumber"
               android:textColor="@color/white"
               android:layout_marginTop="30dp"
               android:layout_marginStart="40dp"
               android:layout_marginEnd="40dp"
               android:textColorHint="@color/hint_color"
               android:padding="16dp"
               android:gravity="center"
               android:inputType="phone"
               android:visibility="invisible"
               android:background="@drawable/bg_edittext" />
       </LinearLayout>
        <Button
            android:id="@+id/button_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/continues"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:padding="16dp"
            android:gravity="center"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/bg_button"
            android:textSize="@dimen/button_textSize"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/linear_edittext"
            app:layout_constraintStart_toStartOf="@id/linear_edittext"
            app:layout_constraintEnd_toEndOf="@id/linear_edittext"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>