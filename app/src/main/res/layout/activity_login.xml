<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollviewLogin"
    android:background="@drawable/ic_bg_screen">

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:id="@+id/constraint_Login">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/image_back"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/ic_back"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/login"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/toolbar_title_size"
                    android:padding="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.Toolbar>
        <View
            android:layout_width="80dp"
            android:layout_height="1dp"
            android:background="@drawable/bg_view_back"
            app:layout_constraintTop_toBottomOf="@id/toolbar_login"
            app:layout_constraintStart_toStartOf="parent"/>
        <ImageView
            android:id="@+id/image_app_title"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_marginTop="40dp"
            android:scaleType="centerCrop"
            android:background="@drawable/ic_app_logo"
            app:layout_constraintTop_toBottomOf="@id/toolbar_login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <EditText
            android:id="@+id/edittext_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_loginEmail"
            android:textColor="@color/white"
            android:layout_marginTop="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textColorHint="@color/hint_color"
            android:padding="16dp"
            android:gravity="center"
            android:inputType="textEmailAddress"
            android:background="@drawable/bg_edittext"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_app_title"/>
        <EditText
            android:id="@+id/edittext_password"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:hint="@string/hint_loginPassword"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color"
            android:inputType="textPassword"
            android:background="@drawable/bg_edittext"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edittext_email"/>
        <Button
            android:id="@+id/button_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:padding="16dp"
            android:gravity="center"
            android:background="@drawable/bg_button"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textSize="@dimen/button_textSize"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/edittext_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <LinearLayout
            android:id="@+id/linearForgotPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_submit">
            <TextView
                android:id="@+id/text_forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forgot_password"
                android:textColor="@color/white_text_opacity"/>
            <TextView
                android:id="@+id/text_recover_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recover"
                android:layout_marginStart="4dp"
                android:textColor="@color/orange_textcolor"/>
        </LinearLayout>
        <View
            android:id="@+id/view"
            android:layout_width="100dp"
            android:layout_height="2dp"
            android:layout_marginTop="30dp"
            android:background="@color/white_background_opacity"
            app:layout_constraintTop_toBottomOf="@id/linearForgotPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/text_login_with"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_with"
            android:textColor="@color/white_background_opacity"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view"/>
        <LinearLayout
            android:id="@+id/linearLoginWith"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_login_with">
            <ImageView
                android:id="@+id/image_fb"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_facebook"/>
            <ImageView
                android:id="@+id/image_google"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/ic_google"/>
            <ImageView
                android:id="@+id/image_twitter"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/ic_twitter"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearSocialLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linearLoginWith">
            <com.facebook.login.widget.LoginButton
                android:id="@+id/button_Login"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:visibility="invisible" />
            <com.google.android.gms.common.SignInButton
                android:id="@+id/button_googleSign"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginStart="25dp"
                android:visibility="invisible"/>
            <com.twitter.sdk.android.core.identity.TwitterLoginButton
                android:id="@+id/button_twitterSignIn"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginStart="25dp"
                android:visibility="invisible"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linearLoginWith"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>