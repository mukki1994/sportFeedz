<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollviewProfile"
    android:background="@drawable/ic_bg_screen">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_bg_screen">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_profile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_andy_rubin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Marcella Gage"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_profile"/>
    <TextView
        android:id="@+id/text_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Marcellagage@gmail.com"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:gravity="center"
        android:padding="4dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/text_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="16dp"
        android:background="@color/white_background_opacity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_email"/>
    <TextView
        android:id="@+id/text_phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="(+91)904 121 2323"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:gravity="center"
        android:padding="4dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/view1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <Button
        android:id="@+id/button_editProfile"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_button"
        android:text="Edit Profile"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_phoneNumber"/>
    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33"/>
    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.66"/>
    <TextView
        android:id="@+id/text_followingNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="97"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_editProfile"
        app:layout_constraintEnd_toStartOf="@id/guideline"/>
    <TextView
        android:id="@+id/text_following"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="FOLLOWINGS"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:paddingBottom="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_followingNumber"
        app:layout_constraintEnd_toStartOf="@id/guideline"/>
    <View
        android:layout_width="1dp"
        android:layout_height="36dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="@id/text_following"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/button_editProfile"/>
    <TextView
        android:id="@+id/text_myFansNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="128"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="22dp"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/button_editProfile"
        app:layout_constraintEnd_toStartOf="@id/guideline2"/>
    <TextView
        android:id="@+id/text_myFans"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="MY FANS"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:paddingBottom="4dp"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/text_myFansNumber"
        app:layout_constraintEnd_toStartOf="@id/guideline2"/>
    <View
        android:layout_width="1dp"
        android:layout_height="36dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="@id/text_myFans"
        app:layout_constraintEnd_toStartOf="@id/guideline2"
        app:layout_constraintTop_toBottomOf="@id/button_editProfile"/>
    <TextView
        android:id="@+id/text_limitedUserNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="79"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="22dp"
        app:layout_constraintStart_toEndOf="@id/guideline2"
        app:layout_constraintTop_toBottomOf="@id/button_editProfile"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/text_limitedUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="LIMITED USER"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:paddingBottom="4dp"
        app:layout_constraintStart_toEndOf="@id/guideline2"
        app:layout_constraintTop_toBottomOf="@id/text_limitedUserNumber"
        app:layout_constraintEnd_toEndOf="parent"/>
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="35dp"
        android:background="@color/white_background_opacity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_followingNumber"/>
    <TextView
        android:id="@+id/text_changePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:padding="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view2"
        app:layout_constraintStart_toStartOf="parent"/>
    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:background="@color/white_background_opacity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_changePassword"/>
    <TextView
        android:id="@+id/text_accountPrivacy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Account Privacy"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:padding="18dp"
        app:layout_constraintTop_toBottomOf="@id/view3"
        app:layout_constraintStart_toStartOf="parent"/>
    <View
        android:id="@+id/view4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:background="@color/white_background_opacity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_accountPrivacy"/>

    <ToggleButton
        android:id="@+id/toggle_privacy"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:checked="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view3" />
</android.support.constraint.ConstraintLayout>
</ScrollView>