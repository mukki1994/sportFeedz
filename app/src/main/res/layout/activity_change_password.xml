<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:focusable="true">
    <FrameLayout
        android:id="@+id/frame_header"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ic_changepassword_background">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image_close"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_close"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/text_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="18dp"
                android:text="Change Password"
                android:textColor="@color/white"
                android:textSize="@dimen/toolbar_title_size"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/image_close"
                app:layout_constraintTop_toTopOf="parent" />
            <View
                android:id="@+id/view"
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_view_back"
                app:layout_constraintTop_toBottomOf="@id/image_close"
                app:layout_constraintStart_toStartOf="parent"/>
            <ImageView
                android:id="@+id/image_logo"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/ic_changepassword_logo"
                app:layout_constraintTop_toBottomOf="@id/view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </android.support.constraint.ConstraintLayout>
    </FrameLayout>
    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6"/>
        <android.support.constraint.Guideline
            android:id="@+id/guideline2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.7"/>
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guideline2">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_old_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Old Password"
                android:textSize="14sp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:textColor="@color/black_opacity"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <com.chaos.view.PinView
                android:id="@+id/pin_old_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/PinWidget.PinView"
                android:inputType="textPassword"
                android:padding="14dp"
                android:cursorVisible="false"
                app:itemSpacing="8dp"
                android:textColor="@drawable/bg_change_password_text_color"
                app:itemCount="10"
                app:viewType="line"
                app:itemWidth="16dp"
                android:textSize="8sp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="8dp"
                app:lineColor="@drawable/bg_change_password_line_color"
                app:layout_constraintEnd_toStartOf="@id/text_show_password"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_old_password">
            </com.chaos.view.PinView>

            <TextView
                android:id="@+id/text_show_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_show_password_second"
                android:drawablePadding="6dp"
                android:text="@string/show"
                android:textSize="12sp"
                android:textColor="@color/grey"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="8dp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@id/pin_old_password"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/pin_old_password"/>
            <TextView
                android:id="@+id/text_hide_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_hide_password_second"
                android:drawablePadding="6dp"
                android:text="Hide"
                android:textSize="12sp"
                android:textColor="@color/grey"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="8dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@id/pin_old_password"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/pin_old_password"/>
            <TextView
                android:id="@+id/text_forgot_old_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Forgot your old password? Click here."
                android:textColor="@color/dark_blue"
                android:gravity="center_horizontal"
                android:layout_marginTop="22dp"
                android:textSize="12sp"
                android:padding="4dp"
                app:layout_constraintTop_toBottomOf="@id/pin_old_password"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/text_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter New Password"
                android:textSize="14sp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:textColor="@color/black_opacity"
                app:layout_constraintTop_toBottomOf="@id/text_forgot_old_password"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <com.chaos.view.PinView
                android:id="@+id/pin_new_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/PinWidget.PinView"
                android:inputType="textPassword"
                android:padding="14dp"
                android:cursorVisible="false"
                app:itemSpacing="8dp"
                android:textColor="@drawable/bg_change_password_text_color"
                app:itemCount="10"
                app:viewType="line"
                app:itemWidth="16dp"
                android:textSize="8sp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="8dp"
                app:lineColor="@drawable/bg_change_password_line_color"
                app:layout_constraintEnd_toStartOf="@id/text_show_password_second"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_new_password"/>


            <TextView
                android:id="@+id/text_show_password_second"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_show_password_second"
                android:drawablePadding="6dp"
                android:text="@string/show"
                android:textSize="12sp"
                android:textColor="@color/grey"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="8dp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@id/pin_new_password"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/pin_new_password"/>
            <TextView
                android:id="@+id/text_hide_password_second"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_hide_password_second"
                android:drawablePadding="6dp"
                android:text="Hide"
                android:textSize="12sp"
                android:textColor="@color/grey"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="8dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@id/pin_new_password"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/pin_new_password"/>

            <Button
                android:id="@+id/button_changePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_button"
                android:padding="16dp"
                android:text="Change"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/button_textSize"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pin_new_password" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>