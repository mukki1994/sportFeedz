<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    tools:context=".activity.SplashActivity">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="105dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <TextView
                android:id="@+id/text_gameName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Football"
                android:textColor="@color/black_opacity"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="2dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/text_gameProgress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="(Game in progress)"
                android:textColor="@color/light_orange"
                android:textSize="12sp"
                android:textStyle="bold"
                android:padding="5dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/text_gameName"/>
            <TextView
                android:id="@+id/text_players"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Players(s):"
                android:textSize="14sp"
                android:layout_marginTop="14dp"
                android:textColor="@color/black_opacity"
                app:layout_constraintStart_toStartOf="@id/text_gameName"
                app:layout_constraintTop_toBottomOf="@id/text_gameName"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circular_image_firstPlayers"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_andy_rubin"
                app:layout_constraintTop_toBottomOf="@id/text_gameProgress"
                app:layout_constraintStart_toEndOf="@id/text_players"/>
            <TextView
                android:id="@+id/text_firstPlayer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Davins"
                android:textColor="@color/black_opacity"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="@id/circular_image_firstPlayers"
                app:layout_constraintStart_toStartOf="@id/circular_image_firstPlayers"
                app:layout_constraintTop_toBottomOf="@id/circular_image_firstPlayers"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circular_image_secondPlayers"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_andy_rubin"
                app:layout_constraintTop_toBottomOf="@id/text_gameProgress"
                app:layout_constraintStart_toEndOf="@id/circular_image_firstPlayers"/>
            <TextView
                android:id="@+id/text_secondPlayer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Denis"
                android:textColor="@color/black_opacity"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="@id/circular_image_secondPlayers"
                app:layout_constraintStart_toStartOf="@id/circular_image_secondPlayers"
                app:layout_constraintTop_toBottomOf="@id/circular_image_secondPlayers"/>
            <TextView
                android:id="@+id/text_playersPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:paddingStart="4dp"
                android:paddingTop="8dp"
                android:paddingEnd="6dp"
                android:textColor="@color/black_opacity"
                android:textSize="14sp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circular_image_userIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_user_profile"
                app:layout_constraintEnd_toStartOf="@id/text_playersPoints"
                app:layout_constraintTop_toTopOf="@id/text_playersPoints"
                app:layout_constraintBottom_toBottomOf="@id/text_playersPoints"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>